<div class="row">
  	<div class="container">
      	<div class="span11">
      		<h3 class="dark show package"><%= @package.title %> <small><%= @package.tutorials.count %> episodes | <%= @package.tutorials.map(&:length).sum %> minutes total</small></h2>
      		
		    	<h3>Package Description</h3>
		    	<p><%= @package.description %></p>
		    
	  	</div>
	</div>
</div>

<div class="show-package-list">
	<ul>
	<% @tutorials.each do |tutorial| %>
		<li class="course-summary-list">

			<div class="row">
			  <div class="container">
			      <div class="span11">
			      	<%= link_to(tutorial_url(tutorial.id), :class => "link-tutorial-summary-title") do %>
			        <h3 class="dark show package-show">Episode 
			          <% if tutorial.package.id == 2 %> 
			              <%= tutorial.id - tutorial.package.tutorials.count %>:
			            <% else %> 
			              <%= tutorial.id %>:
			            <% end %> <%= tutorial.title %></h3>
			        <% end %>
			        <div class="span4 show-content">
			          <h4 class="tutorial-show-text"><%= tutorial.length %> minute screencast</h4>
			          <h4 class="tutorial-show-text bottom-package">Difficulty: <% if tutorial.package.title == "Introduction to Excel" %>
			              <%= "Beginner" %>
			              <% else %>
			              <%= "Intermediate" %>
			              <% end %></h4>
			          <%= link_to "Watch Now", tutorial_url(tutorial.id), :class => "btn btn-primary btn-large" %>
			        </div> 
			        <div class="span7">
			          <h3>Lesson Description</h3>
			          <p><%= tutorial.description %></p>
			          <h3>Topics Covered</h3>
			          <ul class="topic-list">
			            <% tutorial.topics.each do |topic| %>
			            <li class="course-summary-topics"><%= topic.title %></li>
			            <% end %>
			          </ul>
			        </div>
			      </div>
			  </div>
			</div>

		</li>
	</ul>
	<% end %>
</div>	