<div id="request-invite" class="modal" style="display: <%= @user.errors.any? ? 'block' : 'none';%>">
    <%= simple_form_for resource, :as => resource_name, :url => registration_path(resource_name), :html => {:class => 'form-horizontal' } do |f| %>
      <div class="modal-header">
        <a class="close" data-dismiss="modal" href="/">&#215;</a>
        <h3>Sign up for updates!</h3>
      </div>
      <div class="modal-body">
        <%= f.error_notification %>
        <div class="span2 signup">
          <p class="modal-message">Enter your email to receive updates on our course offerings!  Enjoy our Excel tutorials in the meantime!</p>
        </div>
        <div class="span2 signup right">
          <%= f.input :email, :label => false, :placeholder => 'enter email' %>
        </div>
      </div>
      <div class="modal-footer">
        <%= f.submit "Sign up", :class => "btn btn-primary", :id => 'invitation_button' %>
        <a class="btn" data-dismiss="modal" href="/">Close</a>
      </div>
    <% end %>
  </div>