<%= simple_form_for(@topic) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :tutorial_id %>
    <%= f.input :title %>
    <%= f.input :description %>
    <%= f.input :length %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
