<div class="row">
  	<div class="container form-pages">
      	<div class="span11">
      		<h3 class="dark show package">My Dashboard <small><%= link_to('Edit Account <i class="icon-cog"></i>'.html_safe, edit_user_registration_path) %> | <%= @user.email %></small></h3>

			<h3>My Quizzes</h3>

			<table class="table table-hover">
			  <tr>
			    
			    <th>Download Blank Quiz</th>

			    <th>Your Answer File</th>
			    <th>Status</th>
			    <!-- <th>Last Modified</th> -->
			    <th>Resubmit to Try Again</th>
			    <th>Delete</th>
			  </tr>

			<% if !@blank_quizzes.blank? %>
				<% @blank_quizzes.each do |blank_quiz| %>
				  <tr>
				    <td><%= link_to "#{blank_quiz.title} <i class='icon-cloud-download'></i>".html_safe, blank_quiz.url, :target => "_blank" %></td>
				    <td>
				    	<% if blank_quiz.quizzes.empty? %>
				    		<p>Nothing Submitted</p>
				    	<% else %>
				    		<%= blank_quiz.quizzes.last.quiz_path_file_name[0,20] %>...</td>
				    	<% end %>



					    <td><i class="icon-trophy icon-large"></i></td>
					    <td>
					    	<%= simple_form_for :quiz, :url => url_for(:action => 'update', :controller => 'quizzes'), :html => { :multipart => true, :method => "put" } do |form| %>
						    <div class="fileupload fileupload-new small-upload" data-provides="fileupload">
							  <span class="btn btn-file btn-small">Select<%= form.file_field :quiz_path %><span class="fileupload-new"></span><span class="fileupload-exists"></span><input type="file" /></span>
							  <span class="fileupload-preview"></span>
							  <a href="#" class="close fileupload-exists" data-dismiss="fileupload" style="float: none">Ã—</a>

							  <%= form.hidden_field :id, :value => blank_quiz.id %>
							  <%= form.hidden_field :tutorial_id, :value => blank_quiz.id %>
							  <%= form.hidden_field :blank_quiz_id, :value => blank_quiz.id %>
							  <%= form.hidden_field :user_id, :value => @user.id %>
							  
							</div>

							<button type="submit" class="btn btn-primary btn-small">Submit</button>

						  	<% end %>
					    </td>
					    
				    
				    <td><% if !blank_quiz.quizzes.empty? %>
				    	<%= link_to '<i class="icon-remove"'.html_safe, blank_quiz.quizzes.last, method: :delete, data: { confirm: 'Are you sure you want to delete your quiz?' } %></td>
				    	<% end %>
				  </tr>
				
				<% end %>
				</table>
				
				<% else %>
				
				</table>
				
				<div class="alert alert-error">
					<h4>You haven't taken any skill assessments yet - check out <%= link_to 'Our Excel Tutorials', root_path(:controller => "home", :anchor => "our-excel-tutorials") %> first!</h4>
				</div>

			<% end %>


</div>
</div>
</div>